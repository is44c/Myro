<?xml version="1.0" encoding="utf-8"?>

<RobotConfig>
  <DssEnvironment>
    <HttpPort>50000</HttpPort>
    <SoapPort>50001</SoapPort>
  </DssEnvironment>

  <!-- Verbosity Level from 1-5 -->
  <Verbosity>
    <Level>2</Level>
  </Verbosity>

  <Manifest file="Config\NXT.manifest.xml" />

  <StartService>
    <Contract>http://schemas.microsoft.com/robotics/2007/07/lego/nxt/brick.html</Contract>
    <Service>/LegoNXTBrickv2</Service>
  </StartService>

  <Adapter type="Drive" name="drive">
    <Contract>http://schemas.microsoft.com/robotics/2006/05/drive.html</Contract>
    <Service>/legodrive</Service>
  </Adapter>
  
</RobotConfig>